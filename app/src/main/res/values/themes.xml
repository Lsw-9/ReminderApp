<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme (Light Theme) -->
    <style name="Theme.ReminderApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_blue_200</item>
        <item name="colorSecondaryVariant">@color/accent_blue_700</item>
        <item name="colorOnSecondary">@color/dark_text</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/reminder_text_primary</item>
        <item name="android:textColorSecondary">@color/reminder_text_secondary</item>

        <!-- Custom reminder colors -->
        <item name="reminderBackgroundColor">@color/reminder_background_start</item>
        <item name="reminderTextColorPrimary">@color/reminder_text_primary</item>
        <item name="reminderTextColorSecondary">@color/reminder_text_secondary</item>
        <item name="reminderChipBackground">@color/reminder_chip_background</item>
    </style>

    <style name="Theme.ReminderApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ReminderApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ReminderApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>