<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme (Dark Theme) -->
    <style name="Theme.ReminderApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_blue_200</item>
        <item name="colorSecondaryVariant">@color/accent_blue_700</item>
        <item name="colorOnSecondary">@color/dark_text</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/white</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/dark_text_primary</item>
        <item name="android:textColorSecondary">@color/dark_text_secondary</item>

        <!-- Custom reminder colors -->
        <item name="reminderBackgroundColor">@color/dark_surface</item>
        <item name="reminderTextColorPrimary">@color/dark_text_primary</item>
        <item name="reminderTextColorSecondary">@color/dark_text_secondary</item>
        <item name="reminderChipBackground">@color/dark_chip_background</item>
    </style>
</resources>